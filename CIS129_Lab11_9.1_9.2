# writes any number of grades to a text file
print('Enter grades. type -1 to end')
# writes a grade to the text file
with open('grades.txt', mode='w') as grades:
    while True:
        try:
            grade = int(input('Enter grade: '))
            if grade == -1:
                break
            else:
                grades.write(f'{str(grade)}\n')

        except ValueError:
            print('Input must be an integer. Please try again.')


# reads from the text file and prints the grades, total, count, and average
with open('grades.txt', mode='r') as grades:
	print(f'{"Grades":<10}')
	count = 0
	grade_sum = 0
	for grade in grades:
    		print(f'{int(grade):<10}')
    		grade_sum += int(grade)
    		count +=1

	print(f'{"Total":<10}{"Count":^10}{"Average":>10}')
	print(f'{grade_sum:<10}{count:^10}{grade_sum/count:>10.2f}')
